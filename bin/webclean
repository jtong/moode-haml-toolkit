#!/usr/bin/env ruby

require "rubygems"
require "thor"
require "thor/group"

@@project_name = ARGV[0]

class WebBuild < Thor::Group
  include Thor::Actions
  source_root Dir.pwd
  def initialize(args=[], options={}, config={})
    super
    self.destination_root= "../app/android/assets/www"
  end

  def delete_page
    remove_file "index.html"
    remove_dir "pages"
  end

  def copy_css
    remove_dir "css"
  end

  def copy_js
    remove_dir "js"
  end

  def copy_lib
    remove_dir "lib"
  end

  def copy_image
    remove_dir "img"
  end

end

WebBuild.start